import sys
import random
from enum import Enum

def play_rps():
    class RPS(Enum):
        ROCK = 1
        PAPER = 2
        SCISSORS = 3
    
    print("")
    playerchoice = input("Enter...\n1 for Rock, \n2 for Paper, or \n3 for Scissors:\n\n") #Prints start of game

    if playerchoice not in ["1", "2", "3"]:
        print("You must enter 1, 2 or 3.")
        return play_rps()
    
    player = int(playerchoice) #variable into interger

    computerchoice = random.choice("123") #computer is variable

    computer = int(computerchoice) 

    print("")
    print("You chose: " + str(RPS(player)).replace("RPS.","") + ".")
    print("Python chose: " + str(RPS(computer)).replace("RPS.","") + ".")
    print("")

    if player == 1 and computer == 3:
        print("ğŸ‰ You win!")
    elif player == 2 and computer == 1:
        print("ğŸ‰ You win!")
    elif player == 3 and computer == 2:
        print("ğŸ‰ You win!")
    elif player == computer:
        print("ğŸ’€ Draw!")
    else:
        print("ğŸ Python wins!")

    print("\nPlay again?")
    
    while True:
        playagain = input("\nY for Yes or \nQ to quit: ")
        if playagain.lower() not in ["y", "q"]:
            continue
        else:
            break

    if playagain.lower() == "y":
        return play_rps()
    else:
        print("Goodbye!")
        sys.exit()
play_rps()
